<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingVertical="14dp">

    <TextView
        android:id="@+id/tv_item_report_empty"
        style="@style/Title2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="@string/item_report_empty_title"
        android:textColor="@color/gray_500"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/btn_item_report_empty"
        style="@style/Title3"
        android:layout_width="158dp"
        android:layout_height="36dp"
        android:layout_marginTop="14dp"
        android:background="@drawable/bg_blue300_r36"
        android:gravity="center"
        android:text="@string/item_report_empty"
        android:textColor="@color/white"
        app:layout_constraintEnd_toEndOf="@id/tv_item_report_empty"
        app:layout_constraintStart_toStartOf="@id/tv_item_report_empty"
        app:layout_constraintTop_toBottomOf="@id/tv_item_report_empty" />

</androidx.constraintlayout.widget.ConstraintLayout>
